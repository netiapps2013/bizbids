{% block customjs %}
<script type="text/javascript">
	
	
	function timer(i){
		var arr = new Array('1d','2d','3d','4d');
		//alert(i);

	
	
		i = parseInt(i)+1;
		if(i!=4)
		{      if(i==1){
			 document.getElementById('progressbar').style.width="25%";
			}
			if(i==2){
			document.getElementById('pstatus').innerHTML = "Calculating Category and City Matrix";
                         document.getElementById('progressbar').style.width="50%";
                        }
			if(i==3){
			document.getElementById('pstatus').innerHTML = "Vendor matching under progress.";
                         document.getElementById('progressbar').style.width="75%";
                        }
			
			setTimeout(function() { timer([i]); }, 5000);
		} else {
			document.getElementById('progressbar').style.width="100%";
			document.getElementById('pstatus').innerHTML = "Requirement processing completed. Vendors will contact you within 24 hours. You will be redirected to home page in 5secs";
			setTimeout(function() { window.open('{{ path("b_bids_b_bids_home_homepage") }}', '_self'); }, 7000);
			
		}
	}
</script>
